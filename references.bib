@article{ueberhamCyclistsMultipleEnvironmental2019,
  title = {Cyclists' {{Multiple Environmental Urban Exposures}}\textemdash{{Comparing Subjective}} and {{Objective Measurements}}},
  author = {Ueberham, Maximilian and Schlink, Uwe and Dijst, Martin and Weiland, Ulrike},
  year = {2019},
  month = jan,
  journal = {Sustainability},
  volume = {11},
