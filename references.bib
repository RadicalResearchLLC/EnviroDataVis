  keywords = {Black carbon,Mobile measurements,Mobile monitoring,Opportunistic monitoring,Spatial variation,Urban air quality},
  file = {C\:\\Users\\ubers\\Zotero\\storage\\U2Q4VL6M\\Van den Bossche et al. - 2016 - Opportunistic mobile air pollution monitoring A c.pdf;C\:\\Users\\ubers\\Zotero\\storage\\74FE3WGK\\S1352231016304964.html}
