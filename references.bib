@article{brauerExaminationMonitoringApproaches2019,
  title = {Examination of Monitoring Approaches for Ambient Air Pollution: {{A}} Case Study for {{India}}},
  shorttitle = {Examination of Monitoring Approaches for Ambient Air Pollution},
  author = {Brauer, Michael and Guttikunda, Sarath K. and {K a}, Nishad and Dey, Sagnik and Tripathi, Sachchida N. and Weagle, Crystal and Martin, Randall V.},
  year = {2019},
