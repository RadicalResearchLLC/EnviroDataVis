@article{messierMappingAirPollution2018,
  title = {Mapping {{Air Pollution}} with {{Google Street View Cars}}: {{Efficient Approaches}} with {{Mobile Monitoring}} and {{Land Use Regression}}},
  shorttitle = {Mapping {{Air Pollution}} with {{Google Street View Cars}}},
  author = {Messier, Kyle P. and Chambliss, Sarah E. and Gani, Shahzad and Alvarez, Ramon and Brauer, Michael and Choi, Jonathan J. and Hamburg, Steven P. and Kerckhoffs, Jules and LaFranchi, Brian and Lunden, Melissa M. and Marshall, Julian D. and Portier, Christopher J. and Roy, Ananya and Szpiro, Adam A. and Vermeulen, Roel C. H. and Apte, Joshua S.},
