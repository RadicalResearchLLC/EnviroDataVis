  langid = {english},
  keywords = {air pollution,locomotive,mobile monitoring,near-source,railyard},
  file = {C\:\\Users\\ubers\\Zotero\\storage\\RKJVWIN2\\Brantley et al. - 2019 - Characterization of Spatial Air Pollution Patterns.pdf;C\:\\Users\\ubers\\Zotero\\storage\\9YNTU7W5\\535.html}
